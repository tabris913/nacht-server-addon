{
  "format_version": "1.21.60",
  "minecraft:item": {
    "description": {
      "identifier": "nacht:$ITEM_NAME_pickaxe",
      "menu_category": {
        "category": "equipment",
        "group": "minecraft:itemGroup.name.pickaxe"
      }
    },
    "components": {
      "minecraft:icon": "nacht:$ITEM_NAME_pickaxe",
      "minecraft:display_name": {
        "value": "item.nacht:$ITEM_NAME_pickaxe.name"
      },
      "minecraft:rarity": {
        "value": "common"
      },
      "minecraft:glint": {
        "value": false
      },
      "minecraft:max_stack_size": 1,
      "minecraft:stacked_by_data": false,
      "minecraft:enchantable": {
        "value": 0,
        "slot": "pickaxe"
      },
      "minecraft:durability": {
        "max_durability": 100
      },
      "minecraft:repairable": {
        "repair_items": [
          {
            "items": [
              "nacht:$ITEM_NAME_ingot"
            ],
            "repair_amount": "query.max_durability * 0.25"
          },
          {
            "items": [
              "nacht:$ITEM_NAME_pickaxe"
            ],
            "repair_amount": "context.other->query.remaining_durability + (0.12 * context.other->query.max_durability)"
          }
        ]
      },
      "minecraft:damage": 3,
      "minecraft:hand_equipped": true,
      "minecraft:tags": {
        "tags": [
          "minecraft:is_pickaxe",
          "nacht:$ITEM_NAME_tier",
          "minecraft:digger",
          "minecraft:is_tool"
        ]
      },
      "minecraft:digger": {
        "destroy_speeds": [
          {
            "block": {
              "tags": "query.any_tag('minecraft:is_pickaxe_item_destructible') && !query.all_tags('minecraft:_tier_destructible')"
            },
            "speed": 5
          },
          {
            "block": {
              "tags": "query.any_tag('minecraft:is_pickaxe_item_destructible') && !query.all_tags('nacht:$ITEM_NAME_tier_destructible')"
            },
            "speed": 5
          },
          {
            "block": {
              "tags": "query.any_tag('stone')"
            },
            "speed": 8
          }
        ]
      }
    }
  }
}
