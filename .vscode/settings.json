{
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 4
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "css.validate": false,
  "editor.codeActionsOnSave": {
    "editor.organizeImports": "explicit",
    "source.fixAll.eslint": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "Consolas, 'Courier New', monospace, 'Yu Gothic'",
  "editor.fontSize": 14,
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "editor.renderControlCharacters": false,
  "editor.renderWhitespace": "all",
  "editor.rulers": [80, 120],
  "editor.semanticHighlighting.enabled": true,
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  // "editor.wordSegmenterLocales": null,
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 120,
  "eslint.format.enable": true,
  "explorer.confirmDragAndDrop": false,
  "files.associations": {
    "*.scss": "postcss"
  },
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "git.openRepositoryInParentFolders": "never",
  "IDX.agenticWorkspace": true,
  "less.validate": false,
  "prettier.ignorePath": ".prettierignore",
  "redhat.telemetry.enabled": false,
  "remote.autoForwardPortsSource": "hybrid",
  "rest-client.decodeEscapedUnicodeCharacters": true,
  "scss.validate": false,
  "swaggerViewer.previewInBrowser": true,
  "tailwindCSS.experimental.classRegex": [["([\"'`][^\"'`]*.*?[\"'`])", "[\"'`]([^\"'`]*).*?[\"'`]"]],
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.updateImportsOnFileMove.enabled": "never",
  "workbench.activityBar.location": "bottom",
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "none"
}
