{
  "format_version": "1.21.60",
  "minecraft:attachable": {
    "description": {
      "identifier": "nacht:nocturium_helmet.player",
      "item": {
        "nacht:nocturium_helmet": "query.is_owner_identifier_any('minecraft:player')"
      },
      "materials": {
        "default": "armor",
        "enchanted": "armor_enchanted"
      },
      "textures": {
        "default": "textures/models/armor/nocturium_main",
        "enchanted": "textures/misc/enchanted_actor_glint"
      },
      "geometry": {
        "default": "geometry.player.armor.helmet"
      },
      "scripts": {
        // boot chest helmet leg
        "parent_setup": "variable.helmet_layer_visible = 0.0;",
        "animate": [
          "offset"
        ]
      },
      "animations": {
        "offset": "animation.armor.helmet.offset"
      },
      "render_controllers": [
        "controller.render.armor"
      ]
    }
  }
}
